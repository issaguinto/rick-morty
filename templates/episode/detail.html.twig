{% extends 'base.html.twig' %}

{% block title %}{{ episode.name ?? 'Episode' }} - Rick and Morty{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <a href="{{ path('app_episodes') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-blue-600 to-green-600 hover:from-blue-700 hover:to-green-700 transition-all duration-200 shadow-lg hover:shadow-xl">
            ‚Üê Back
        </a>
    </div>

    {% if episode and episode.name %}
        <div class="bg-gradient-to-br from-blue-600 via-purple-600 to-green-600 shadow-2xl overflow-hidden sm:rounded-xl mb-8">
            <div class="px-8 py-12 text-center">
                <div class="inline-block bg-white/20 backdrop-blur-md px-4 py-2 rounded-full mb-4">
                    <span class="text-white font-bold text-lg">{{ episode.episode ?? 'Unknown' }}</span>
                </div>
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 tracking-tight">
                    {{ episode.name ?? 'Unknown Episode' }}
                </h1>
                <div class="flex flex-wrap justify-center gap-6 text-blue-100">
                    <div class="bg-white/10 backdrop-blur-sm px-4 py-2 rounded-lg">
                        <span class="text-white font-medium">Air Date:</span>
                        <span class="text-blue-100">{{ episode.air_date ?? 'Unknown' }}</span>
                    </div>
                    <div class="bg-white/10 backdrop-blur-sm px-4 py-2 rounded-lg">
                        <span class="text-white font-medium">Characters:</span>
                        <span class="text-blue-100">{{ episode.character_details is defined ? episode.character_details|length : 0 }}</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Episode Information -->
        <div class="bg-white shadow-xl overflow-hidden sm:rounded-xl mb-8">
            <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-blue-50 border-b border-gray-200">
                <h2 class="text-2xl font-bold text-gray-900">Episode Information</h2>
            </div>
            <div class="p-6">
                <dl class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-gradient-to-br from-blue-50 to-green-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 mb-1">Episode Code</dt>
                        <dd class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-green-600">
                            {{ episode.episode ?? 'Unknown' }}
                        </dd>
                    </div>
                    <div class="bg-gradient-to-br from-green-50 to-blue-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 mb-1">Air Date</dt>
                        <dd class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-blue-600">
                            {{ episode.air_date ?? 'Unknown' }}
                        </dd>
                    </div>
                    <div class="bg-gradient-to-br from-purple-50 to-pink-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 mb-1">Created</dt>
                        <dd class="text-lg font-semibold text-gray-700">
                            {{ episode.created is defined ? episode.created|date('M d, Y') : 'Unknown' }}
                        </dd>
                    </div>
                </dl>
            </div>
        </div>

        {% if episode.character_details is defined and episode.character_details|length > 0 %}
            <div class="bg-white shadow-xl overflow-hidden sm:rounded-xl">
                <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-green-50 border-b border-gray-200">
                    <h2 class="text-2xl font-bold text-gray-900">
                        Characters in this Episode ({{ episode.character_details is defined ? episode.character_details|length : 0 }})
                    </h2>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                        {% for character in episode.character_details %}
                            {% if character.name is defined and character.image is defined %}
                            <div class="character-card bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:scale-105 border border-gray-200 hover:border-green-400/50">
                                <div class="relative">
                                    <img src="{{ character.image }}" alt="{{ character.name }}" class="w-full h-48 object-cover">
                                    <div class="absolute top-3 right-3">
                                        {% set statusClass = character.status == 'Alive' ? 'bg-green-400 text-gray-900' : (character.status == 'Dead' ? 'bg-red-400 text-white' : 'bg-gray-400 text-white') %}
                                        <span class="px-2 py-1 rounded-full text-xs font-medium {{ statusClass }}">
                                            {{ character.status ?? 'Unknown' }}
                                        </span>
                                    </div>
                                </div>
                                <div class="p-4">
                                    <h3 class="text-lg font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-blue-600 mb-3 line-clamp-2">
                                        {{ character.name }}
                                    </h3>
                                    <div class="space-y-2 text-sm">
                                        <p class="text-gray-600">
                                            <span class="text-green-600 font-medium">Species:</span>
                                            <span class="text-gray-800">{{ character.species ?? 'Unknown' }}</span>
                                        </p>
                                        {% if character.type is defined and character.type %}
                                            <p class="text-gray-600">
                                                <span class="text-green-600 font-medium">Type:</span>
                                                <span class="text-gray-800">{{ character.type }}</span>
                                            </p>
                                        {% endif %}
                                        <p class="text-gray-600">
                                            <span class="text-green-600 font-medium">Gender:</span>
                                            <span class="text-gray-800">{{ character.gender ?? 'Unknown' }}</span>
                                        </p>
                                        <p class="text-gray-600">
                                            <span class="text-green-600 font-medium">Origin:</span>
                                            <span class="text-gray-800 text-xs">{{ character.origin.name ?? 'Unknown' }}</span>
                                        </p>
                                    </div>
                                    <div class="mt-4">
                                        <a href="{{ path('app_character_detail', {id: character.id ?? 1}) }}" 
                                           class="w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gradient-to-r from-green-600 to-blue-600 hover:from-green-700 hover:to-blue-700 transition-all duration-200">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="bg-white shadow-xl overflow-hidden sm:rounded-xl">
                <div class="px-6 py-12 text-center">
                    <div class="text-6xl mb-4">ü§ñ</div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No Character Data</h3>
                    <p class="text-gray-500">Character information for this episode is not available.</p>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="bg-white shadow-xl overflow-hidden sm:rounded-xl">
            <div class="px-6 py-12 text-center">
                <div class="text-6xl mb-4">üîç</div>
                <h3 class="text-2xl font-bold text-gray-900 mb-2">Episode Not Found</h3>
                <p class="text-gray-500 mb-6">The episode you're looking for doesn't exist or couldn't be loaded.</p>
                <a href="{{ path('app_home') }}" 
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-blue-600 to-green-600 hover:from-blue-700 hover:to-green-700">
                    Return to Home
                </a>
            </div>
        </div>
    {% endif %}
</div>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
{% endblock %}
